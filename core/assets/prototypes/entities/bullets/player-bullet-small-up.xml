<?xml version="1.0" encoding="UTF-8" ?>
<prototype>
    <components>
        <component type="PhysicsComponent">
            <body>
                <type>DynamicBody</type>
                <bullet>true</bullet>
                <gravityScale>0</gravityScale>
            </body>
            <sensors>
                <sensor id="HitDetector">
                    <fixture id="HitDetector">
                        <shape type="CircleShape">
                            <radius>1</radius>
                        </shape>
                        <filter>
                            <categoryBit>PlayerBulletCategory</categoryBit>
                            <maskBit>PlayerBulletMask</maskBit>
                        </filter>
                    </fixture>
                </sensor>
            </sensors>
            <lightHandlers>
                <lightHandler id="Main">
                    <light type="PointLight">
                        <color type="RgbColor">
                            <r>0</r>
                            <g>0</g>
                            <b>0</b>
                        </color>
                        <distance>32</distance>
                        <xRay>true</xRay>
                    </light>
                </lightHandler>
            </lightHandlers>
        </component>
        <component type="GraphicsComponent">
            <views>
                <view type="SpriteView" id="MovingUp">
                    <sprite type="AtlasSprite">
                        <atlasFilename>entity-atlas</atlasFilename>
                        <regionName>bullet-small</regionName>
                    </sprite>
                </view>
            </views>
        </component>
        <component type="StateComponent">
            <state>Moving</state>
        </component>
        <component type="DirectionComponent">
            <direction>Up</direction>
        </component>
        <component type="SpeedComponent">
            <speed>3</speed>
        </component>
        <component type="BulletLayerComponent" />
        <component type="DamageComponent">
            <damage>1</damage>
        </component>
        <component type="LifetimeComponent">
            <lifetime>1</lifetime>
        </component>
        <component type="AutoMoveComponent" />
        <component type="SoundOnSpawnComponent">
            <sounds>
                <sound>
                    <filename>medium-bullet-shoot-sound</filename>
                </sound>
            </sounds>
        </component>
        <component type="SpawnOnDestroyComponent">
            <spawnEntries>
                <spawnEntry>
                    <prototypeCode>ExplosionSmall</prototypeCode>
                </spawnEntry>
            </spawnEntries>
        </component>
        <component type="DestroyOnContactComponent" />
    </components>
</prototype>