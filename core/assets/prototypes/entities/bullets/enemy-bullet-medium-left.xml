<?xml version="1.0" encoding="UTF-8" ?>
<prototype>
    <components>
        <component type="PhysicsComponent">
            <body>
                <type>DynamicBody</type>
                <bullet>true</bullet>
            </body>
            <sensors>
                <sensor id="HitDetector">
                    <fixture>
                        <shape type="CircleShape">
                            <radius>1</radius>
                        </shape>
                        <isSensor>true</isSensor>
                        <filter>
                            <categoryBit>EnemyBulletCategory</categoryBit>
                            <maskBit>EnemyBulletMask</maskBit>
                        </filter>
                    </fixture>
                </sensor>
            </sensors>
            <lightHandlers>
                <lightHandler id="Main">
                    <light type="PointLight">
                        <color type="RgbColor">
                            <r>0</r>
                            <g>0</g>
                            <b>0</b>
                        </color>
                        <distance>32</distance>
                        <xRay>true</xRay>
                    </light>
                </lightHandler>
            </lightHandlers>
        </component>
        <component type="GraphicsComponent">
            <views>
                <view type="SpriteView" id="MovingLeft">
                    <sprite type="AtlasSprite">
                        <atlasFilename>main-atlas</atlasFilename>
                        <regionName>bullet-medium-left</regionName>
                    </sprite>
                </view>
            </views>
        </component>
        <component type="StateComponent">
            <state>Moving</state>
        </component>
        <component type="DirectionComponent">
            <direction>Left</direction>
        </component>
        <component type="SpeedComponent">
            <speed>2</speed>
        </component>
        <component type="BulletLayerComponent"></component>
        <component type="DamageComponent">
            <damage>2</damage>
        </component>
        <component type="LifetimeComponent">
            <lifetime>2</lifetime>
        </component>
        <component type="AutoMoveComponent"></component>
        <component type="SoundOnSpawnComponent">
            <sounds>
                <sound>
                    <filename>medium-bullet-shoot-sound</filename>
                </sound>
            </sounds>
        </component>
        <component type="SpawnOnDestroyComponent">
            <spawnEntries>
                <spawnEntry>
                    <prototypeCode>ExplosionSmall</prototypeCode>
                </spawnEntry>
            </spawnEntries>
        </component>
        <component type="DestroyOnContactComponent"></component>
    </components>
</prototype>