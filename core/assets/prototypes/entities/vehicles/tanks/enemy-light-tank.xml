<?xml version="1.0" encoding="UTF-8" ?>
<prototype>
    <components>
        <component type="PhysicsComponent">
            <body>
                <type>DynamicBody</type>
            </body>
            <hitBoxes>
                <hitBox id="HitBox">
                    <fixture>
                        <shape type="RectangleShape">
                            <width>14</width>
                            <height>14</height>
                        </shape>
                        <filter>
                            <categoryBit>EnemyVehicleCategory</categoryBit>
                            <maskBit>EnemyVehicleMask</maskBit>
                        </filter>
                    </fixture>
                </hitBox>
            </hitBoxes>
            <sensors>
                <sensor id="Left">
                    <fixture>
                        <shape type="RectangleShape">
                            <position>
                                <x>-7.5</x>
                                <y>0</y>
                            </position>
                            <width>2</width>
                            <height>12</height>
                        </shape>
                        <filter>
                            <categoryBit>EnemyVehicleCategory</categoryBit>
                            <maskBit>EnemyVehicleMask</maskBit>
                        </filter>
                    </fixture>
                </sensor>
                <sensor id="Right">
                    <fixture>
                        <shape type="RectangleShape">
                            <position>
                                <x>7.5</x>
                                <y>0</y>
                            </position>
                            <width>2</width>
                            <height>12</height>
                        </shape>
                        <filter>
                            <categoryBit>EnemyVehicleCategory</categoryBit>
                            <maskBit>EnemyVehicleMask</maskBit>
                        </filter>
                    </fixture>
                </sensor>
                <sensor id="Up">
                    <fixture>
                        <shape type="RectangleShape">
                            <position>
                                <x>0</x>
                                <y>7.5</y>
                            </position>
                            <width>12</width>
                            <height>2</height>
                        </shape>
                        <filter>
                            <categoryBit>EnemyVehicleCategory</categoryBit>
                            <maskBit>EnemyVehicleMask</maskBit>
                        </filter>
                    </fixture>
                </sensor>
                <sensor id="Down">
                    <fixture>
                        <shape type="RectangleShape">
                            <position>
                                <x>0</x>
                                <y>-7.5</y>
                            </position>
                            <width>12</width>
                            <height>2</height>
                        </shape>
                        <filter>
                            <categoryBit>EnemyVehicleCategory</categoryBit>
                            <maskBit>EnemyVehicleMask</maskBit>
                        </filter>
                    </fixture>
                </sensor>
            </sensors>
            <lightHandlers>
                <lightHandler id="Main">
                    <light type="PointLight">
                        <color type="RgbColor">
                            <r>0</r>
                            <g>0</g>
                            <b>0</b>
                        </color>
                        <distance>64</distance>
                        <xRay>true</xRay>
                    </light>
                </lightHandler>
            </lightHandlers>
        </component>
        <component type="GraphicsComponent">
            <views>
                <view type="AnimationView" id="MovingLeft">
                    <animation type="AtlasAnimation" atlasFilename="main-atlas" playMode="LOOP" frameDuration="0.2f">
                        <frame regionName="enemy-light-tank-left-0" />
                        <frame regionName="enemy-light-tank-left-1" />
                    </animation>
                </view>
                <view type="AnimationView" id="MovingRight">
                    <animation type="AtlasAnimation" atlasFilename="main-atlas" playMode="LOOP" frameDuration="0.2f">
                        <frame regionName="enemy-light-tank-right-0" />
                        <frame regionName="enemy-light-tank-right-1" />
                    </animation>
                </view>
                <view type="AnimationView" id="MovingUp">
                    <animation type="AtlasAnimation" atlasFilename="main-atlas" playMode="LOOP" frameDuration="0.2f">
                        <frame regionName="enemy-light-tank-up-0" />
                        <frame regionName="enemy-light-tank-up-1" />
                    </animation>
                </view>
                <view type="AnimationView" id="MovingDown">
                    <animation type="AtlasAnimation" atlasFilename="main-atlas" playMode="LOOP" frameDuration="0.2f">
                        <frame regionName="enemy-light-tank-down-0" />
                        <frame regionName="enemy-light-tank-down-1" />
                    </animation>
                </view>
            </views>
        </component>
        <component type="StateComponent">
            <state>Moving</state>
        </component>
        <component type="DirectionComponent">
            <direction>Down</direction>
        </component>
        <component type="HealthComponent">
            <health>2</health>
            <maxHealth>2</maxHealth>
        </component>
        <component type="SpeedComponent">
            <speed>1.2</speed>
        </component>
        <component type="RandomDirectionComponent">
            <changeDirectionMinFrequency>0.3</changeDirectionMinFrequency>
            <changeDirectionMaxFrequency>0.6</changeDirectionMaxFrequency>
            <availableDirections>
                <direction>Left</direction>
                <direction>Right</direction>
                <direction>Up</direction>
                <direction>Down</direction>
            </availableDirections>
        </component>
        <component type="VehicleLayerComponent" />
        <component type="AutoMoveComponent" />
        <component type="AmmoComponent">
            <currentLevel>1</currentLevel>
            <maxLevel>2</maxLevel>
            <ammo level="1">
                <bullet direction="Down">EnemyBulletSmallDown</bullet>
                <bullet direction="Up">EnemyBulletSmallUp</bullet>
                <bullet direction="Left">EnemyBulletSmallLeft</bullet>
                <bullet direction="Right">EnemyBulletSmallRight</bullet>
            </ammo>
            <ammo level="2">
                <bullet direction="Down">EnemyBulletMediumDown</bullet>
                <bullet direction="Up">EnemyBulletMediumUp</bullet>
                <bullet direction="Left">EnemyBulletMediumLeft</bullet>
                <bullet direction="Right">EnemyBulletMediumRight</bullet>
            </ammo>
        </component>
        <component type="RandomShootComponent">
            <minShootFrequency>0.7</minShootFrequency>
            <maxShootFrequency>1.5</maxShootFrequency>
        </component>
        <component type="SpawnOnDestroyComponent">
            <spawnEntries>
                <spawnEntry>
                    <prototypeCode>ExplosionMedium</prototypeCode>
                </spawnEntry>
            </spawnEntries>
        </component>
        <component type="BonusLootComponent" />
        <component type="TriggerComponent">
            <destroyEvents>
                <event type="AddPointsEvent">
                    <points>10</points>
                </event>
            </destroyEvents>
        </component>
        <component type="EnemyComponent" />
        <component type="HighlightOnHitComponent" />
    </components>
</prototype>