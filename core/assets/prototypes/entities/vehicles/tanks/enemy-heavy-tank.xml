<?xml version="1.0" encoding="UTF-8" ?>
<prototype>
    <components>
        <component type="PhysicsComponent">
            <body>
                <type>DynamicBody</type>
                <gravityScale>0</gravityScale>
            </body>
            <hitBoxes>
                <hitBox id="HitBox">
                    <fixture>
                        <shape type="RectangleShape">
                            <width>26</width>
                            <height>26</height>
                        </shape>
                        <filter>
                            <categoryBit>EnemyVehicleCategory</categoryBit>
                            <maskBit>EnemyVehicleMask</maskBit>
                        </filter>
                    </fixture>
                </hitBox>
            </hitBoxes>
            <sensors>
                <sensor id="Left">
                    <fixture>
                        <shape type="RectangleShape">
                            <position>
                                <x>-13</x>
                                <y>0</y>
                            </position>
                            <width>2</width>
                            <height>24</height>
                        </shape>
                        <filter>
                            <categoryBit>EnemyVehicleCategory</categoryBit>
                            <maskBit>EnemyVehicleMask</maskBit>
                        </filter>
                    </fixture>
                </sensor>
                <sensor id="Right">
                    <fixture>
                        <shape type="RectangleShape">
                            <position>
                                <x>13</x>
                                <y>0</y>
                            </position>
                            <width>2</width>
                            <height>24</height>
                        </shape>
                        <filter>
                            <categoryBit>EnemyVehicleCategory</categoryBit>
                            <maskBit>EnemyVehicleMask</maskBit>
                        </filter>
                    </fixture>
                </sensor>
                <sensor id="Up">
                    <fixture>
                        <shape type="RectangleShape">
                            <position>
                                <x>0</x>
                                <y>13</y>
                            </position>
                            <width>24</width>
                            <height>2</height>
                        </shape>
                        <filter>
                            <categoryBit>EnemyVehicleCategory</categoryBit>
                            <maskBit>EnemyVehicleMask</maskBit>
                        </filter>
                    </fixture>
                </sensor>
                <sensor id="Down">
                    <fixture>
                        <shape type="RectangleShape">
                            <position>
                                <x>0</x>
                                <y>-13</y>
                            </position>
                            <width>24</width>
                            <height>2</height>
                        </shape>
                        <filter>
                            <categoryBit>EnemyVehicleCategory</categoryBit>
                            <maskBit>EnemyVehicleMask</maskBit>
                        </filter>
                    </fixture>
                </sensor>
            </sensors>
            <lightHandlers>
                <lightHandler id="Main">
                    <light type="PointLight">
                        <color type="RgbColor">
                            <r>0</r>
                            <g>0</g>
                            <b>0</b>
                        </color>
                        <distance>128</distance>
                        <xRay>true</xRay>
                    </light>
                </lightHandler>
            </lightHandlers>
        </component>
        <component type="GraphicsComponent">
            <views>
                <view type="AnimationView" id="MovingLeft">
                    <animation type="AtlasAnimation" atlasFilename="main-atlas" playMode="LOOP" frameDuration="0.2f">
                        <frame regionName="enemy-heavy-tank-left-0" />
                        <frame regionName="enemy-heavy-tank-left-1" />
                    </animation>
                </view>
                <view type="AnimationView" id="MovingRight">
                    <animation type="AtlasAnimation" atlasFilename="main-atlas" playMode="LOOP" frameDuration="0.2f">
                        <frame regionName="enemy-heavy-tank-right-0" />
                        <frame regionName="enemy-heavy-tank-right-1" />
                    </animation>
                </view>
                <view type="AnimationView" id="MovingUp">
                    <animation type="AtlasAnimation" atlasFilename="main-atlas" playMode="LOOP" frameDuration="0.2f">
                        <frame regionName="enemy-heavy-tank-up-0" />
                        <frame regionName="enemy-heavy-tank-up-1" />
                    </animation>
                </view>
                <view type="AnimationView" id="MovingDown">
                    <animation type="AtlasAnimation" atlasFilename="main-atlas" playMode="LOOP" frameDuration="0.2f">
                        <frame regionName="enemy-heavy-tank-down-0" />
                        <frame regionName="enemy-heavy-tank-down-1" />
                    </animation>
                </view>
            </views>
        </component>
        <component type="StateComponent">
            <state>Moving</state>
        </component>
        <component type="DirectionComponent">
            <direction>Down</direction>
        </component>
        <component type="HealthComponent">
            <health>10</health>
            <maxHealth>10</maxHealth>
        </component>
        <component type="SpeedComponent">
            <speed>0.5</speed>
        </component>
        <component type="RandomDirectionComponent">
            <changeDirectionMinFrequency>0.6</changeDirectionMinFrequency>
            <changeDirectionMaxFrequency>0.9</changeDirectionMaxFrequency>
            <availableDirections>
                <direction>Left</direction>
                <direction>Right</direction>
                <direction>Up</direction>
                <direction>Down</direction>
            </availableDirections>
        </component>
        <component type="VehicleLayerComponent" />
        <component type="AutoMoveComponent" />
        <component type="AmmoComponent">
            <currentLevel>3</currentLevel>
            <maxLevel>3</maxLevel>
            <ammo level="3">
                <bullet direction="Down">EnemyBulletLargeDown</bullet>
                <bullet direction="Up">EnemyBulletLargeUp</bullet>
                <bullet direction="Left">EnemyBulletLargeLeft</bullet>
                <bullet direction="Right">EnemyBulletLargeRight</bullet>
            </ammo>
        </component>
        <component type="RandomShootComponent">
            <minShootFrequency>0.3</minShootFrequency>
            <maxShootFrequency>1</maxShootFrequency>
        </component>
        <component type="SpawnOnDestroyComponent">
            <spawnEntries>
                <spawnEntry>
                    <prototypeCode>ExplosionLarge</prototypeCode>
                </spawnEntry>
            </spawnEntries>
        </component>
        <component type="BonusLootComponent" />
        <component type="TriggerComponent">
            <destroyEvents>
                <event type="AddPointsEvent">
                    <points>100</points>
                </event>
            </destroyEvents>
        </component>
        <component type="EnemyComponent" />
        <component type="HighlightOnHitComponent" />
    </components>
</prototype>