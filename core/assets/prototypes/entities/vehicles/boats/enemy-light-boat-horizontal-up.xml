<?xml version="1.0" encoding="UTF-8" ?>
<prototype>
    <components>
        <component type="PhysicsComponent">
            <body>
                <type>DynamicBody</type>
            </body>
            <hitBoxes>
                <hitBox id="HitBox">
                    <fixture>
                        <shape type="RectangleShape">
                            <width>48</width>
                            <height>16</height>
                        </shape>
                        <filter>
                            <categoryBit>EnemyVehicleCategory</categoryBit>
                            <maskBit>EnemyVehicleMask</maskBit>
                        </filter>
                    </fixture>
                </hitBox>
            </hitBoxes>
            <sensors>
                <sensor id="Left">
                    <fixture>
                        <shape type="RectangleShape">
                            <position>
                                <x>-24</x>
                                <y>0</y>
                            </position>
                            <width>2</width>
                            <height>16</height>
                        </shape>
                        <isSensor>true</isSensor>
                        <filter>
                            <categoryBit>EnemyVehicleCategory</categoryBit>
                            <maskBit>EnemyVehicleMask</maskBit>
                        </filter>
                    </fixture>
                </sensor>
                <sensor id="Right">
                    <fixture>
                        <shape type="RectangleShape">
                            <position>
                                <x>24</x>
                                <y>0</y>
                            </position>
                            <width>2</width>
                            <height>16</height>
                        </shape>
                        <isSensor>true</isSensor>
                        <filter>
                            <categoryBit>EnemyVehicleCategory</categoryBit>
                            <maskBit>EnemyVehicleMask</maskBit>
                        </filter>
                    </fixture>
                </sensor>
            </sensors>
            <lightHandlers>
                <lightHandler id="Main">
                    <light type="PointLight">
                        <color type="RgbColor">
                            <r>0</r>
                            <g>0</g>
                            <b>0</b>
                        </color>
                        <distance>64</distance>
                        <xRay>true</xRay>
                    </light>
                </lightHandler>
            </lightHandlers>
        </component>
        <component type="GraphicsComponent">
            <views>
                <view type="AnimationView" id="MovingLeft">
                    <animation type="AtlasAnimation" atlasFilename="main-atlas" playMode="LOOP" frameDuration="0.2f">
                        <frame regionName="enemy-light-boat-horizontal-up-left-0" />
                        <frame regionName="enemy-light-boat-horizontal-up-left-1" />
                    </animation>
                    <position>
                        <x>0</x>
                        <y>16</y>
                    </position>
                </view>
                <view type="AnimationView" id="MovingRight">
                    <animation type="AtlasAnimation" atlasFilename="main-atlas" playMode="LOOP" frameDuration="0.2f">
                        <frame regionName="enemy-light-boat-horizontal-up-right-0" />
                        <frame regionName="enemy-light-boat-horizontal-up-right-1" />
                    </animation>
                    <position>
                        <x>0</x>
                        <y>16</y>
                    </position>
                </view>
            </views>
        </component>
        <component type="StateComponent">
            <state>Moving</state>
        </component>
        <component type="DirectionComponent">
            <direction>Left</direction>
        </component>
        <component type="HealthComponent">
            <health>7</health>
            <maxHealth>7</maxHealth>
        </component>
        <component type="SpeedComponent">
            <speed>1.3</speed>
        </component>
        <component type="RandomDirectionComponent">
            <changeDirectionMinFrequency>0.2</changeDirectionMinFrequency>
            <changeDirectionMaxFrequency>0.6</changeDirectionMaxFrequency>
            <availableDirections>
                <direction>Left</direction>
                <direction>Right</direction>
            </availableDirections>
        </component>
        <component type="VehicleLayerComponent"></component>
        <component type="AutoMoveComponent"></component>
        <component type="SpawnOnDestroyComponent">
            <spawnEntries>
                <spawnEntry>
                    <prototypeCode>ExplosionLarge</prototypeCode>
                </spawnEntry>
            </spawnEntries>
        </component>
        <component type="PointsComponent">
            <points>20</points>
        </component>
        <component type="RandomSpawnComponent">
            <minSpawnFrequency>0.3</minSpawnFrequency>
            <maxSpawnFrequency>0.9</maxSpawnFrequency>
            <spawnEntries>
                <spawnEntry>
                    <prototypeCode>EnemyBulletMediumUp</prototypeCode>
                </spawnEntry>
            </spawnEntries>
        </component>
        <component type="EnemyComponent"></component>
        <component type="HighlightOnHitComponent"></component>
    </components>
</prototype>