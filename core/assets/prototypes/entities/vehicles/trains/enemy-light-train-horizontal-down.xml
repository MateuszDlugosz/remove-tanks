<?xml version="1.0" encoding="UTF-8" ?>
<prototype>
    <components>
        <component type="PhysicsComponent">
            <body>
                <type>DynamicBody</type>
            </body>
            <hitBoxes>
                <hitBox id="HitBox">
                    <fixture>
                        <shape type="RectangleShape">
                            <position>
                                <x>0</x>
                                <y>6</y>
                            </position>
                            <width>36</width>
                            <height>24</height>
                        </shape>
                        <filter>
                            <categoryBit>EnemyVehicleCategory</categoryBit>
                            <maskBit>EnemyVehicleMask</maskBit>
                        </filter>
                    </fixture>
                </hitBox>
                <sensors>
                    <sensor id="Left">
                        <fixture>
                            <shape type="RectangleShape">
                                <position>
                                    <x>-18</x>
                                    <y>6</y>
                                </position>
                                <width>2</width>
                                <height>24</height>
                            </shape>
                            <filter>
                                <categoryBit>EnemyVehicleCategory</categoryBit>
                                <maskBit>EnemyVehicleMask</maskBit>
                            </filter>
                        </fixture>
                    </sensor>
                    <sensor id="Right">
                        <fixture>
                            <shape type="RectangleShape">
                                <position>
                                    <x>18</x>
                                    <y>6</y>
                                </position>
                                <width>2</width>
                                <height>24</height>
                            </shape>
                            <filter>
                                <categoryBit>EnemyVehicleCategory</categoryBit>
                                <maskBit>EnemyVehicleMask</maskBit>
                            </filter>
                        </fixture>
                    </sensor>
                </sensors>
            </hitBoxes>
            <lightHandlers>
                <lightHandler id="Main">
                    <light type="PointLight">
                        <color type="RgbColor">
                            <r>0</r>
                            <g>0</g>
                            <b>0</b>
                        </color>
                        <distance>64</distance>
                        <xRay>true</xRay>
                    </light>
                </lightHandler>
            </lightHandlers>
        </component>
        <component type="GraphicsComponent">
            <views>
                <view type="AnimationView" id="MovingLeft">
                    <animation type="AtlasAnimation" atlasFilename="main-atlas" playMode="LOOP" frameDuration="0.2f">
                        <frame regionName="enemy-light-train-horizontal-down-0" />
                        <frame regionName="enemy-light-train-horizontal-down-1" />
                    </animation>
                    <position>
                        <x>0</x>
                        <y>16</y>
                    </position>
                </view>
                <view type="AnimationView" id="MovingRight">
                    <animation type="AtlasAnimation" atlasFilename="main-atlas" playMode="LOOP" frameDuration="0.2f">
                        <frame regionName="enemy-light-train-horizontal-down-0" />
                        <frame regionName="enemy-light-train-horizontal-down-1" />
                    </animation>
                    <position>
                        <x>0</x>
                        <y>16</y>
                    </position>
                </view>
            </views>
        </component>
        <component type="StateComponent">
            <state>Moving</state>
        </component>
        <component type="DirectionComponent">
            <direction>Left</direction>
        </component>
        <component type="HealthComponent">
            <health>7</health>
            <maxHealth>7</maxHealth>
        </component>
        <component type="SpeedComponent">
            <speed>1.3</speed>
        </component>
        <component type="RandomDirectionComponent">
            <changeDirectionMinFrequency>0.2</changeDirectionMinFrequency>
            <changeDirectionMaxFrequency>0.6</changeDirectionMaxFrequency>
            <availableDirections>
                <direction>Left</direction>
                <direction>Right</direction>
            </availableDirections>
        </component>
        <component type="VehicleLayerComponent" />
        <component type="AutoMoveComponent" />
        <component type="SpawnOnDestroyComponent">
            <spawnEntries>
                <spawnEntry>
                    <prototypeCode>ExplosionLarge</prototypeCode>
                </spawnEntry>
            </spawnEntries>
        </component>
        <component type="BonusLootComponent" />
        <component type="TriggerComponent">
            <destroyEvents>
                <event type="AddPointsEvent">
                    <points>20</points>
                </event>
                <event type="DecreaseEnemiesCounterEvent" />
            </destroyEvents>
        </component>
        <component type="RandomSpawnComponent">
            <minSpawnFrequency>0.3</minSpawnFrequency>
            <maxSpawnFrequency>0.9</maxSpawnFrequency>
            <spawnEntries>
                <spawnEntry>
                    <prototypeCode>EnemyBulletMediumDown</prototypeCode>
                </spawnEntry>
            </spawnEntries>
        </component>
        <component type="EnemyComponent" />
        <component type="HighlightOnHitComponent" />
    </components>
</prototype>