<?xml version="1.0" encoding="UTF-8" ?>
<prototype>
    <components>
        <component type="PhysicsComponent">
            <body>
                <type>DynamicBody</type>
                <gravityScale>0</gravityScale>
            </body>
            <hitBoxes>
                <hitBox id="HitBox">
                    <fixture>
                        <shape type="RectangleShape">
                            <position>
                                <x>0</x>
                                <y>6</y>
                            </position>
                            <width>36</width>
                            <height>24</height>
                        </shape>
                        <filter>
                            <categoryBit>ActorCategory</categoryBit>
                            <maskBit>ActorMask</maskBit>
                        </filter>
                    </fixture>
                </hitBox>
            </hitBoxes>
            <lightHandlers>
                <lightHandler id="Main">
                    <light type="PointLight">
                        <color type="RgbColor">
                            <r>0</r>
                            <g>0</g>
                            <b>0</b>
                        </color>
                        <distance>64</distance>
                        <xRay>true</xRay>
                    </light>
                </lightHandler>
            </lightHandlers>
        </component>
        <component type="GraphicsComponent">
            <views>
                <view type="AnimationView" id="MovingLeft">
                    <animation type="AtlasAnimation" atlasFilename="main-atlas" playMode="LOOP" frameDuration="0.2f">
                        <frame regionName="enemy-light-train-horizontal-down-0" />
                        <frame regionName="enemy-light-train-horizontal-down-1" />
                    </animation>
                    <position>
                        <x>0</x>
                        <y>16</y>
                    </position>
                </view>
                <view type="AnimationView" id="MovingRight">
                    <animation type="AtlasAnimation" atlasFilename="main-atlas" playMode="LOOP" frameDuration="0.2f">
                        <frame regionName="enemy-light-train-horizontal-down-0" />
                        <frame regionName="enemy-light-train-horizontal-down-1" />
                    </animation>
                    <position>
                        <x>0</x>
                        <y>16</y>
                    </position>
                </view>
            </views>
        </component>
        <component type="StateComponent">
            <state>Moving</state>
        </component>
        <component type="DirectionComponent">
            <direction>Left</direction>
        </component>
        <component type="SpeedComponent">
            <speed>1.3</speed>
        </component>
        <component type="VehicleLayerComponent"></component>
        <component type="AutoMoveComponent"></component>
    </components>
</prototype>