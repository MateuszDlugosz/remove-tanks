<?xml version="1.0" encoding="UTF-8" ?>
<prototype>
    <components>
        <component type="PhysicsComponent">
            <body>
                <type>StaticBody</type>
            </body>
            <sensors>
                <sensor id="HitDetector">
                    <fixture>
                        <shape type="RectangleShape">
                            <width>16</width>
                            <height>16</height>
                        </shape>
                        <isSensor>true</isSensor>
                        <filter>
                            <categoryBit>PlayerVehicleBlockadeCategory</categoryBit>
                            <maskBit>PlayerVehicleBlockadeMask</maskBit>
                        </filter>
                    </fixture>
                </sensor>
            </sensors>
            <lightHandlers>
                <lightHandler id="Main">
                    <light type="PointLight">
                        <color type="RgbColor">
                            <r>0</r>
                            <g>0</g>
                            <b>0</b>
                        </color>
                        <distance>32</distance>
                        <xRay>true</xRay>
                    </light>
                </lightHandler>
            </lightHandlers>
        </component>
        <component type="GraphicsComponent">
            <views>
                <view type="AnimationView" id="StandingDown">
                    <animation type="AtlasAnimation" atlasFilename="main-atlas" playMode="LOOP" frameDuration="0.2f">
                        <frame regionName="battle-indicator-0" />
                        <frame regionName="battle-indicator-1" />
                        <frame regionName="battle-indicator-2" />
                        <frame regionName="battle-indicator-1" />
                    </animation>
                </view>
            </views>
        </component>
        <component type="StateComponent">
            <state>Standing</state>
        </component>
        <component type="DirectionComponent">
            <direction>Down</direction>
        </component>
        <component type="BonusLayerComponent"></component>
        <component type="DestroyOnContactComponent"></component>
        <component type="SpawnOnDestroyComponent">
            <spawnEntries>
                <spawnEntry>
                    <prototypeCode>ExplosionBonus</prototypeCode>
                </spawnEntry>
            </spawnEntries>
        </component>
        <component type="SoundOnDestroyComponent">
            <sounds>
                <sound>
                    <filename>bonus-sound</filename>
                </sound>
            </sounds>
        </component>
    </components>
</prototype>